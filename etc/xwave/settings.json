{
  "client":
  {
    "name": "xray",
    "path_config": "/opt/etc/xray/configs"
  },
  "app":
  {
    "name": "xwave",
    "version": "0.0.3",
    "log": "/opt/var/log/xwave/xwave.log"
  },
  "network":
  {
    "table_id": "224",
    "table_mark_hex": "0x3629",
    "connection_policy": "xwave",
    "chain_name": "xwave",
    "port_redirect": "60018",
    "port_tproxy": "60019",
    "port_forwarding_list":
    [
      80,
      443,
      8080
    ],
    "port_forwarding_range":[
      "1024:1055",
      "1000:1099"
    ],
    "DNS_forwarding": true,
    "IPv6": false,
    "IPv6_exclusions":[
      "2a02:6b8::2:242/128", //IP адреса ваших корпоративных серверов
      "2a02:6b8:a::a/128"
    ],
    "IPv4_exclusions":[
      "95.173.136.0/24",   //IP адреса ваших корпоративных серверов
      "95.173.137.0/24",
      "95.173.138.0/24"
    ],
    "dns":{
      "dns_filter": true,
      "IPv4":[
        "10.0.0.0/8",
        "192.168.0.0/16"
      ],
      "IPv6":[
        "fd00::/8",
        "fe80::/10"
      ]
    }
  }
}
